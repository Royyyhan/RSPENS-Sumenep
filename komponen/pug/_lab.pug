    h2.gallery-title GALERI
    .gallery-images
      img(src="https://storage.googleapis.com/a1aa/image/Pec9ZpVt29RpASsrr3jwrduD2UdMYi6RCNFsQSMRbIxtkI3JA.jpg", alt="Laboratory equipment and workspace", width="200", height="150")
      img(src="https://storage.googleapis.com/a1aa/image/RaFgw2HWDHYELRB1QF0KosjsVn0brMUseN6YhebvF6UYJRuTA.jpg", alt="Laboratory technicians working with microscopes", width="200", height="150")
