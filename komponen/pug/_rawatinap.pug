mixin inpatientSection(jenisKamar, id, konten)
  .inpatient-accordion
    input.inpatient-accordion-toggle(
      type="checkbox"
      id=id
    )
    label.inpatient-accordion-label(
      for=id
    )= jenisKamar
    .inpatient-accordion-content
      //- Bagian Gambar
      if konten.images && konten.images.type === 'images'
        .image-container
          each gambar in konten.images.sources
            img.room-image(
              src=gambar
              alt=konten.images.alt || 'Gambar Kamar'
            )
      
      //- Bagian Daftar Fasilitas
      if konten.list && konten.list.type === 'list'
        ul.facilities-list
          each fasilitas in konten.list.items
            li.facility-item= fasilitas
