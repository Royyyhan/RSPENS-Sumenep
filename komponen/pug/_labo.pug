 mixin labSection(title, id, content)
    .lab-section
      input.lab-accordion-toggle(
        type="checkbox"
        id=id
      )
      label.lab-accordion-label(
        for=id
      )= title
      .lab-accordion-content
        if content.deskripsi && content.deskripsi.length
          ul.lab-list
            each item in content.deskripsi
              li.lab-item= item

  //- Konten Utama
  .laboratorium-container
    .hero-section
      h1.hero-title Selamat Datang Di
      h2.hero-subtitle Laboratorium

    //- Deskripsi
    .description-section
      h3.section-title Deskripsi
      p.description-text Laboratorium RS ABC memiliki beberapa laboratorium spesialis yang dilengkapi dengan peralatan modern dan tenaga ahli yang berpengalaman...

    //- Daftar Laboratorium
    .lab-sections
      each data, nama in dataLab
        +labSection(nama, data.id, data)

    //- Galeri
    .gallery-section
      h3.section-title Galeri
      .gallery-container
        each item, index in dataGaleri
          .gallery-item
            img.gallery-image(
              src=item.gambar
              alt=item.alt
            )