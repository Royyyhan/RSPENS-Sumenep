mixin videoItem(videoSrc, title, description)
  .video-item-container
    iframe(src=videoSrc allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen frameborder="0")
    .video-content
      .video-title= title
      .video-description= description

