// Mixin untuk Template Utama
mixin layout(title)
  doctype html
  html(lang="en")
    head
      title #{title}
      link(rel="stylesheet" href="styles.css")
    body
      // Include navbar
      +navbar()

      // Include search bar
      +search('Cari dokter, layanan, atau artikel')

      // Include profile section
      +profile('Dr. John Doe', 'Ahli Bedah Umum', '/images/johndoe.jpg')

      // Include dropdown menu (drop & drop2)
      +drop('Menu 1', [{href: '/link1', name: 'Item 1'}, {href: '/link2', name: 'Item 2'}])
      +drop('Menu 2', [{href: '/link3', name: 'Item 3'}, {href: '/link4', name: 'Item 4'}])

      // Include slideshow
      +slide([{src: '/images/slide1.jpg', alt: 'Slide 1'}, {src: '/images/slide2.jpg', alt: 'Slide 2'}])

      // Include dokter section
      +dokter('Dr. Alice Smith', 'Spesialis Anak', '/images/alicesmith.jpg')

      // Include button section
      +button('Pesan Sekarang', 'submit')

      // Include denah (map) section
      +denah('Jl. Sudirman No. 45, Jakarta')

      // Include iklan (advertisement) section
      +iklan('Promo Fotocopy Diskon 50%', '/images/iklan.jpg')

      // Footer
      footer
        p &copy; 2024 Your Website. All Rights Reserved.
