extends template.pug

block content
  // Mengapa Kami Section
  section.why-choose-us
    .container
      h2 Mengapa Kami ?
      .features
        .feature-item
          img(src="komponen/assets/img/share.png" alt="Digital Icon")
          .feature-text
            h3 Rumah Sakit Berbasis Digital
            p Menerapkan sistem manajemen operasional berbasis teknologi informasi jaringan
        .feature-item
          img(src="komponen/assets/img/load.png" alt="Care Icon")
          .feature-text
            h3 Perawatan Berkelanjutan
            p Kesinambungan pelayanan yang dilakukan mulai dari perawatan sampai pasien pulang ke rumah oleh tim home care multi-profesi
        .feature-item
          img(src="komponen/assets/img/search.png" alt="Evidence Icon")
          .feature-text
            h3 Praktik Berbasis Bukti
            p Seluruh klien dikaji berdasarkan riwayat penyakit dahulu, keluarga, dan pola hidup
        .feature-item
          img(src="komponen/assets/img/user.png" alt="Collaboration Icon")
          .feature-text
            h3 Kolaborasi Interprofesional
            p Mengembangkan kolaborasi interprofesional dalam pelayanan, riset bidang kesehatan, serta pengabdian masyarakat
      button.learn-more-btn Selengkapnya

  // Penawaran Spesial Section
  section.special-offers
    .container
      h2 Penawaran Spesial
      .offers-grid
        .offer-item
          img(src="komponen/assets/img/20240724155111.jpeg" alt="Paket MCU Jantung - Satu Jantung untuk Disayang")
          p Persiapkan Diri Sebelum Tiba di Tanah Suci
        .offer-item
          img(src="komponen/assets/img/20240808181309.jpg" alt="Hemat 10% MCU Sport")
          p Hemat 10% MCU Sport
        .offer-item
          img(src="komponen/assets/img/20240811120405.jpg" alt="Harga Khusus Medical Check Up")
          p Harga Khusus Medical Check Up
        .offer-item
          img(src="komponen/assets/img/20240909165450.jpg" alt="Persiapkan Diri Sebelum Tiba di Tanah Suci")
          p Paket MCU Jantung - Satu Jantung untuk Disayang
      button.learn-more-btn Selengkapnya

